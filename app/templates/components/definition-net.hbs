<svg>
  <g class="zoom">
    <g class="parents-links"></g>
    <g class="children-links"></g>

    <g class="parents-nodes">
      {{#each relationship.parents as |word index|}}
        <g class="node">
          <circle r="6"></circle>
          {{#link-to 'word' word tagName='text' dy="3"}}{{word}}{{/link-to}}
        </g>
      {{/each}}
    </g>

    <g class="children-nodes">
      {{#each relationship.children as |word index|}}
        <g class="node">
          <circle r="6"></circle>
          {{#link-to 'word' word tagName='text'}}{{word}}{{/link-to}}
        </g>
      {{/each}}
    </g>

    <g class="self-node">
      {{#if relationship.parents}}
        <text class="parent-label" dx="-20" dy="5">← {{relationship.parentsLabel}}</text>
      {{/if}}

      {{#if relationship.children}}
        <text class="child-label" dx="20" dy="5">{{relationship.childrenLabel}} →</text>
      {{/if}}

      <circle r="8"></circle>
      <text class="self-label" dy="2rem">{{relationship.word}}</text>
    </g>
  </g>
</svg>
